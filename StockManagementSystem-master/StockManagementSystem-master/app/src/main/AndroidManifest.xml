<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taksh.android.stockmanagementsystem">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectPartyName"
            android:label="Select Party Name" />
        <activity
            android:name=".SelectProdctType"
            android:label="Select Product Type" />
        <activity
            android:name=".SelectSubProduct"
            android:label="Select Variant" />
        <activity
            android:name=".SelectSetSizes"
            android:label="Select Sizes" />
        <activity android:name=".SelectNumberOfSets" />
        <activity
            android:name=".ShowPreview"
            android:label="Preview" />
        <activity
            android:name=".MakeCustomExcel"
            android:label="Custom Excel Sheet" />
        <activity android:name=".EditQueryData" />
        <activity android:name=".EditPartyList" />
        <activity android:name=".EditProductDescription" />
        <activity android:name=".AddParty" />
        <activity android:name=".EditOrDeleteParty" />
        <activity android:name=".AddProduct" />
        <activity android:name=".EditOrDeleteProduct" />
        <activity android:name=".AddVariant" />
        <activity android:name=".EditOrDeleteVariant"></activity>
    </application>

</manifest>